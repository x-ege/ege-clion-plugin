{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Load Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "mkdir -p build && cd build && cmake .."
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (!(Test-Path build)) { mkdir build }; cd build; cmake .."
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Build Project (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build || (mkdir -p build && pushd . && cd build && cmake .. && popd) ); cmake --build build --parallel $(getconf _NPROCESSORS_ONLN)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (!(Test-Path build)) { mkdir build; cd build; cmake .. }; cmake --build build --parallel $env:NUMBER_OF_PROCESSORS"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Build Project (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "(test -d build || (mkdir -p build && pushd . && cd build && cmake .. && popd) ); cmake --build build --config Release --parallel $(getconf _NPROCESSORS_ONLN)"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (!(Test-Path build)) { mkdir build; cd build; cmake .. }; cmake --build build --config Release --parallel $env:NUMBER_OF_PROCESSORS"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        },
        {
            "label": "Load And Build Project (Debug)",
            "type": "shell",
            "command": "echo",
            "args": [
                "Load And Build Project (Debug) - Done",
            ],
            "group": "build",
            "dependsOn": [
                "Load Project",
                "Build Project (Debug)"
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "Load And Build Project (Release)",
            "type": "shell",
            "command": "echo",
            "args": [
                "Load And Build Project (Release) - Done",
            ],
            "group": "build",
            "dependsOn": [
                "Load Project",
                "Build Project (Release)"
            ],
            "dependsOrder": "sequence",
        },
        {
            "label": "Run Project (Debug)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "if command -v wine64; then wine64 ege-demo.exe; else wine ege-demo.exe; fi"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "Build Project (Debug)"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    ".\\ege-demo.exe"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/Debug"
                }
            }
        },
        {
            "label": "Run Project (Release)",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "if command -v wine64; then wine64 ege-demo.exe; else wine ege-demo.exe; fi"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "dependsOn": [
                "Build Project (Release)"
            ],
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    ".\\ege-demo.exe"
                ],
                "options": {
                    "cwd": "${workspaceFolder}/build/Release"
                }
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "bash",
            "args": [
                "-l",
                "-c",
                "git clean -fdx build || rm -rf build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": "$gcc",
            "windows": {
                "command": "powershell",
                "args": [
                    "-Command",
                    "if (Get-Command git -ErrorAction SilentlyContinue) { git clean -fdx build } else { Remove-Item -Recurse -Force build -ErrorAction SilentlyContinue }"
                ],
                "options": {
                    "cwd": "${workspaceFolder}"
                }
            }
        }
    ]
}